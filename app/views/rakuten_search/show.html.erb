<div class="container">
  <h4 class="search-result">検索結果</h4>
  <div class="row dvd-main justify-content-center">
    <% @dvds.each do |dvd| %>
      <div class="dvd-box card col-5 col-md-5 col-xl-3 m-2">
        <div class="card-body">
          <p><%= link_to (image_tag(dvd.medium_image_url, class: "img-fluid")), dvd.item_url, class: "card-img-top" %></p>
          <p class="card-title"><%= dvd.title %></p>
          <p><%= dvd.label %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>