<div class="container">
  <h4 class="search-result">検索結果</h4>
  <div class="row dvd-main justify-content-center">
    <h5 class="result-count"><%= @dvds.count %>件</h5>
    <% @dvds.each do |dvd| %>
      <div class="dvd-box card col-5 col-md-5 col-xl-3 m-2">
        <%= link_to dvd.item_url, class:"card-body" do %>
          <p><%= image_tag(dvd.medium_image_url, class: "img-fluid") %></p>
          <p class="card-title"><%= dvd.title %></p>
          <p><%= dvd.label %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>