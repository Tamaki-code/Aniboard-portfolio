 <div class="main">
  <h4 class="sub-title">投稿の編集</h2>
  <div class="form-box col-12 col-md-12 col-xl-6">
    <div class="form-box-inner mt-3">
      <%= form_with(model: [@anime, @post], url: anime_post_path(@anime, @post), local: true) do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
        <p>
        <%= f.text_field :anime_title, value: "#{@anime.title}", :readonly => true %>
        </p>
        <p>
        <%= f.text_field :title, placeholder: "#{@post.title}" %>
        </p>
        <p>
        <%= f.text_area :body, placeholder: "#{@post.body}" %>
        </p>
          <%= f.hidden_field :anime_id, value: @anime.id %>
          <%= f.hidden_field :user_id, value: @user.id %>
          <div id="edit-rate-<%= @post.id%>">
              <%= f.label :rate,'評価 ', class:'col-md-3 col-form-label' %>
          </div>
          <script>
            $('#edit-rate-<%= @post.id %>').raty({
              starOff   : '<%= asset_path('star-off.png') %>',
              starOn    : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              half: true,
              score: <%= @post.rate %>,
              scoreName: 'post[rate]'
            });
          </script>
        <%= f.submit "更新する", class:"mt-3 mb-5 btn btn-warning" %>
      <% end %>
    </div>
  </div>
</div>