<div class="user-page container container-fluid d-flex">
  <nav class="sidebar navbar navbar-light  navbar-expand-md col-md-3 col-xl-3">
    <!-- ハンバーガーメニュー -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="nav flex-column">
       <li class="nav-item">
          <%#= link_to "プロフィール",anime_post_post_user_path, class: "nav-i nav-link" %>
          <%#= link_to "投稿一覧",show_post_users_path,class: "nav-i nav-link" %>
        </li>
      </ul>
    </div>
  </nav>
  <div class="user-box ps-4 col-9 col-md-9 col-xl-9">
    <h2 class="pb-3"><%= "#{@post_user.name}" %></h2>
    <div class="profile_box text-center">
      <p class="image-box">
        <% if @post_user.image? %>
            <%= image_tag @post_user.image.url, class: "col-3 col-md-3 col-xl-3" %>
        <% else %>
          <%= image_tag "/assets/default.jpg", class: "col-3 col-md-3 col-xl-3" %>
        <% end %>
      </p>
      <h5 class="pt-4">Profile</h5>
      <p>
        <%= safe_join("#{@post_user.profile}".split("\n"),tag(:br))%>
      </p>
    </div>
  </div>
</div>