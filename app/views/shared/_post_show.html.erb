<div class="ps-2">
  <p>投稿者<i class="far fa-user ps-1 pe-2"></i><%= link_to "#{post.user.name}",  anime_post_post_user_path(anime_id: post.anime.id, id: post.user_id, post_id: post.id ) %></p>
  <div class="d-flex">
    <p class="me-3">評価<i class="fas fa-star-half-alt ps-1 pe-1"></i> <%= post.rate %></p>
    <p id="star-rate<%= post.id %>"></p> 
  </div>   
  <p class="card_text"><%= safe_join(post.body.split("\n"),tag(:br)) %></p>
  <div id="likes_buttons_<%= post.id %>" class="me-3">
    <%= render partial: 'likes/like', locals: {post: post} %>
  </div>
</div>
<script>
  $('#star-rate<%= post.id %>').raty({
    starOff   : '<%= asset_path('star-off.png') %>',
    starOn    : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    half: true,
    readOnly: true,
    score: <%= post.rate %>,
    number: 5
  });
</script>

